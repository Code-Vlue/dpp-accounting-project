# Staging Environment
STAGING_BUCKET_NAME=dpp-accounting-platform-staging
STAGING_CLOUDFRONT_DISTRIBUTION_ID=E123456789ABCDF
STAGING_SITE_URL=https://staging.dpp-accounting-platform.example.com
STAGING_API_URL=https://api-staging.dpp-accounting-platform.example.com

# Production Environment
PROD_BUCKET_NAME=dpp-accounting-platform-prod
PROD_CLOUDFRONT_DISTRIBUTION_ID=E123456789ABCDG
PROD_SITE_URL=https://www.dpp-accounting-platform.example.com
